<div class="w-1/3 px-2">
  <ul class="pl-2 pr-8">
    {{#each @model as |band|}}
      <li class="mb-2">
        <LinkTo @route="bands.band.songs" @model={{band.slug}}>
          {{band.name}}
        </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div>
    {{#if this.isAddingBand}}
      <input 
        @type="text" 
        @valu={{this.newBandName}} 
        placeholder="New band" 
        aria-label="new band"
      >
      <button 
        type="button" 
        class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-0 px-1 border border-gray-400 rounded shadow"
        {{on "click" this.saveBand}}
      >
        Add
      </button>
      <button 
        type="button" 
        class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-0 px-1 border border-gray-400 rounded shadow"
        {{on "click" this.cancelAddBand}}
      >
        Cancel
      </button>
    {{else}}
      <button 
        type="button" 
        class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-0 px-1 border border-gray-400 rounded shadow"
        {{on "click" this.addBand}}
      >
        Add new band
      </button>
    {{/if}}
    
  </div>
</div>
<div class="w-2/3 px-2">
  {{outlet}}
</div>